<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Storage">
        <Preference
            android:key="database_location"
            android:icon="@drawable/ic_location_teal_48dp"
            android:enabled="false"
            android:title="Location" />
        <Preference
            android:key="storage_space"
            android:icon="@drawable/ic_size_teal_48dp"
            android:enabled="false"
            android:title="Used Space"
            />

</PreferenceCategory>
    <PreferenceCategory
        android:title="Database">
        <Preference
            android:key="database_size"
            android:icon="@drawable/ic_size_teal_48dp"
            android:enabled="false"
            android:title="Size"
            />
        <Preference
            android:key="database_filename"
            android:icon="@drawable/ic_folder_teal_48dp"
            android:enabled="false"
            android:title="Location" />
        <Preference
            android:key="database_clear"
            android:icon="@drawable/ic_delete_red_48dp"
            android:title="Delete Database"
            android:summary="Clear all data from the database"
            />
    </PreferenceCategory>
</PreferenceScreen>
