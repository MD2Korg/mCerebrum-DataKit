<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityDataKit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/service_text"
            style="@style/textview_heading1_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Service" />

        <View style="@style/view_divider_dark" />

        <Switch
            android:id="@+id/switchService"
            style="@style/switch_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="false"
            android:showText="false"
            android:text="Service Status:" />

        <TextView
            android:id="@+id/service_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Running time: 0 minutes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/configuration_text"
            style="@style/textview_heading1_dark"
            android:layout_width="wrap_content"
            android:text="Settings" />

        <View style="@style/view_divider_dark" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            style="@style/textview_heading2_dark"
            android:text="SDCard Settings:" />
        <TextView
            android:id="@+id/textview_sdcard_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            style="@style/textview_normal_dark"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            style="@style/textview_heading2_dark"
            android:text="Location:" />
        <TextView
            android:id="@+id/textview_location_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            style="@style/textview_normal_dark"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            style="@style/textview_heading2_dark"
            android:text="Database Location" />
        <TextView
            android:id="@+id/textview_location_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            style="@style/textview_normal_dark"
            android:text="" />

    </LinearLayout>

</LinearLayout>